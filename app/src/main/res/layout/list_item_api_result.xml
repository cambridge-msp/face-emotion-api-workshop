<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:text="Face #1"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:id="@+id/list_item_api_result_title"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/list_item_api_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:textSize="24sp" />

    <TextView
        android:text="Anger: 0.34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/list_item_results"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/list_item_api_result_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="96dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/list_item_api_image"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>